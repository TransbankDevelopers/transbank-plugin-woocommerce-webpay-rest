{
    "description": "Transbank WooCommerce Plugin",
    "name": "transbank/woocommerce-plugin",
    "require": {
        "transbank/transbank-sdk": "^5.0",
        "ext-json": "*",
        "php": ">=8.2",
        "monolog/monolog": "^3.9"
    },
    "config": {
        "platform": {
            "php": "8.2"
        }
    },
    "autoload": {
        "psr-4": {
            "Transbank\\WooCommerce\\WebpayRest\\": "src/",
            "Transbank\\Plugin\\": "shared/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    }   
}
